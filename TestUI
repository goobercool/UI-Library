-- Create The ScreenGui
local screengui = Instance.new("ScreenGui")
screengui.Parent = game.Players.LocalPlayer.PlayerGui
screengui.Name = "TestUI"
local Lib = {}
Lib.__index = Lib



function Lib.new(text)

local screengui = Instance.new("ScreenGui")
local frame = Instance.new("Frame", screengui)
local scrollingframe = Instance.new("ScrollingFrame", frame)
local textlabel = Instance.new("TextLabel", frame)
screengui.Parent = game.Players.LocalPlayer.PlayerGui
screengui.Name = text
frame.Name = text
scrollingframe.Name = "Pages"
textlabel.Name = text

frame.Size = UDim2.new(0, 415, 0, 400)
frame.Position = Vector3.new(0.405, 0, 0.345, 0)
frame.ZIndex = 10

scrollingframe.Size = UDim2.new(0, 140, 0, 400)
scrollingframe.Position = Vector3.new(-0.338, 0, 0.345, 0)
scrollingframe.CanvasSize = UDim2.new(0, 0, 0, 0)
scrollingframe.AutomaticCanvasSize = Enum.AutomaticSize.Y

textlabel.Position = Vector3.new(-0.338, 0, -0.075, 0)
textlabel.Size =  UDim2.new(0, 555, 0, 30)
textlabel.TextScaled = true


  return frame
end



-- Define the Button class
local Button = {}
Button.__index = Button

function Button.new(text, callback)
  local self = setmetatable({}, Button)
  self.text = text
  self.onClick = nil
  self.guiObject = Instance.new("TextButton")
  self.guiObject.Text = text
  self.guiObject.MouseButton1Click:Connect(callback)
  
  return self
end

function Button:setPosition(x, y)
  self.guiObject.Position = UDim2.new(x, 0, y, 0)
end

function Button:setSize(width, height)
  self.guiObject.Size = UDim2.new(width, 0, height, 0)
end

-- Define the Label class
local Label = {}
Label.__index = Label

function Label.new(text)
  local self = setmetatable({}, Label)
  self.text = text
  self.guiObject = Instance.new("TextLabel")
  self.guiObject.Text = text
  return self
end

function Label:setPosition(x, y)
  self.guiObject.Position = UDim2.new(x, 0, y, 0)
end

function Label:setSize(width, height)
  self.guiObject.Size = UDim2.new(width, 0, height, 0)
end

-- Export the module
local UI = {}
UI.Button = Button
UI.Label = Label
return UI
